{
  "name": "Stegman",
  "description": "Steganographic messaging",
  "version": "1.0.7",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_end",
      "js": [
        "src/content/index.js"
      ],
      "css": [
        "src/content/index.css"
      ]
    }
  ],
  "permissions": [
    "storage",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/index.js"
  },
  "icons": {
    "128": "logo-128.png"
  }
}
